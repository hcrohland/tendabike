{% extends "base" %}

{% block content %}
    <table>
        <tr>
            <th> gear </th>
            <th> hook </th>
            <th> start </th>
            <th> end </th>
        </tr>

        {% for a in attach  %}
            {% set hook = types | filter(attribute="id", value=a.0.hook) | first %}
            <tr>
                <td>  {{ a.1 }} </td>
                <td>  {{ hook.name }} </td>
                <td>  {{ a.0.attached | date(format="%A, %_d. %h %Y")}} </td>
                <td>  {% if a.0.detached %} {{ a.0.detached | date(format="%A, %_d. %h %Y")}} {% endif %} </td>
            </tr>
        {% endfor %}
    </table> 
{% endblock content %}