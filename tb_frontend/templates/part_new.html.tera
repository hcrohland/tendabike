{% extends "base" %}

{% block content %}
<div class="container">
    <br>
    <form method="POST">
        <br>
        <div class="alert alert-success" role="alert">
        <h2>
        <label for="what">New </label> 
        <select class="alert-success" name="what">
            <option hidden value> -- select type -- </option>
            {% for id, t in types %}
                <option value="{{id}}">{{t.name}}</option>
            {% endfor %}
        </select> 
        </h2>
        </div>
        <input type="text" class="form-control" required name="name" id="name" placeholder="Give it a name..">
        <label for="vendor">Vendor</label> 
        <input type="text" class="form-control" name="vendor" id="vendor" placeholder="Your parts vendor..">
        <label for="model">Model</label> 
        <input type="text" class="form-control" name="model" id="model" placeholder="The model name">
        <label for="purchase">Purchase date</label> 
        <input type="date" class="form-control" required name="purchase" id="purchase">
        <br>
        <input type="submit" class="btn btn-primary" value="Create">
    </form>
</div>

{% endblock content %}