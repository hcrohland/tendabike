    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "program": "${workspaceFolder}/target/debug/tb_engine"
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "pid": "${command:pickMyProcess}" // use ${command:pickProcess} to pick other users' processes
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'tendabike'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=tendabike"
                ],
                "filter": {
                    "name": "tendabike",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "terminal": "integrated"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'tendabike'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=tendabike",
                    "--package=tendabike"
                ],
                "filter": {
                    "name": "tendabike",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "terminal": "integrated"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'tendabike'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=tendabike",
                    "--package=tendabike"
                ],
                "filter": {
                    "name": "tendabike",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}